<div class="form-container">
    <a href="/thoughts/dashboard">Go back</a>
    <h1>Edit Thought</h1>
    
    {{#with thought}}
    <form action="/thoughts/edit" method="post" id="register-thought-form" class="form">
        <input type="hidden" name="id" id="id" value="{{id}}" />
        <input type="hidden" name="UserId" id="UserId" value="{{UserId}}" />
        <div class="form-control">
            <label for="title">Title: </label>
            <input type="text" name="title" value="{{title}}" id="title" placeholder="Enter your thought..." maxlength="80" required />
        </div>
        <button type="submit">Edit</button>
    </form>
    {{/with}}
</div>