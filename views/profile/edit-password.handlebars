<div class="form-container">
    <a href="/profile">Go back</a>
    <h1>Edit Password</h1>
    
    {{#with user}}
        <form action="/profile/edit-password" method="post" id="update-password-form" class="form">
            <input type="hidden" name="id" id="id" value="{{id}}" />
            <div class="form-control">
                <label for="password">Previous Password: </label>
                <div class="align">
                    <input type="password" name="password" id="password" placeholder="Enter your previous password..." />  
                    <div class="icon-div">
                        <i class="bi bi-eye"></i>  
                    </div>          
                </div>
            </div>
            <div class="form-control">
                <label for="new_password">New Password: </label>
                <div class="align">
                    <input type="password" name="new_password" id="new_password" placeholder="Enter your new password..." />  
                    <div class="icon-div">
                        <i class="bi bi-eye"></i>  
                    </div>          
                </div>
            </div>
            <button type="submit">Edit</button>
        </form>
    {{/with}}
</div>