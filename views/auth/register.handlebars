<div class="auth-container">
    <h2>Register</h2>

    <form action="/register" method="post" id="register-form" class="form">
        <div class="form-control">
            <label for="full_name">Name: </label>
            <input type="text" name="full_name" id="full_name" placeholder="Enter your full name..." required />            
        </div>

        <div class="form-control">
            <label for="email">Email: </label>
            <input type="email" name="email" id="email" placeholder="Enter your best email..." required />            
        </div>

        <div class="form-control">
            <label for="password">Password: </label>
            <div class="align">
                <input type="password" name="password" class="password-input" id="password" placeholder="Enter your password..." required /> 
                <div class="icon-div">
                    <i class="bi bi-eye"></i>  
                </div>        
            </div>
        </div>

        <div class="form-control">
            <label for="confirm_password">Confirm password: </label>
            <div class="align">
                <input type="password" name="confirm_password" class="password-input" id="confirm_password" placeholder="Confirm your password..." required />            
                <div class="icon-div">
                    <i class="bi bi-eye"></i>
                </div>
            </div>
        </div>

        <button type="submit">Register</button>
        <p>Already have an account? <a href="/login">Login</a></p>
    </form>
</div>